<h2>ユーザー新規登録</h2>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_with(model: @user, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name,'名前' %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Enter your name' %>
  </div>

  <div class="form-group">
    <%= f.label :email, 'メール' %>
    <%= f.text_field :email, class: 'form-control', placeholder: 'Enter your email' %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
    <span id="helpBlock" class="text-muted">パスワードは半角英数、6文字以上で入力してください。</span>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'パスワード確認' %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <%= f.submit "アカウントを作成", class: 'btn btn-outline-primary' %>
<% end %>