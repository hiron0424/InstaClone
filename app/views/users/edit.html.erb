<h2>ユーザ情報を編集</h2>

<%= form_with(model: @user, local: true ) do |f| %>

  <div class="field">
    <%= f.label :image %><br/>
    <%= image_tag(@user.image.url) if @user.image && @user.image.url %>
    <label class="btn btn-outline-dark"><%= f.file_field :image, style: 'display:none' %>プロフィール写真を変更</label>
    <%= f.hidden_field :image_cache %>
  </div>

  <div class="form-group">
    <%= f.label :name,'名前' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email, 'メール' %>
    <%= f.text_field :email, class: 'form-control', placeholder: 'Enter your email' %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
    <span id="helpBlock" class="text-muted">パスワードは半角英数、6文字以上で入力してください。</span>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'パスワード確認' %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= link_to '戻る', user_path, class: 'btn btn-outline-warning' %>
    <%= f.submit '更新する', class: 'btn btn-outline-primary' %>
  </div>
<% end %>