<%= render 'layouts/navbar' %>

<%= render 'layouts/notice'%>
<!--p id="notice"><%= notice %></p-->

<div class="container-fluid" style="margin-top: 100px; margin-bottom:72px;">
  <div class="container" style=" min-height: 100vh;">
    <div><p style="text-align: center;">一覧</p></div>
    <div class="index_photo" >
      <% @photos.each do |photo| %>
            <div class="caption">
              <%= link_to photo_path(photo) do %>
                <span class="text"><p><i class="fas fa-heart"></i> <%= photo.likes_count %></p></span>
                <%= image_tag photo.image.url, class: 'card shadow-lg', style: 'object-fit: cover;' %>
              <% end %>
            </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'layouts/footer' %>