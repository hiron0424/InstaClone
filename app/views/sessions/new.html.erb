<%= render 'layouts/notice'%>

<div class="container">
  <div class="card shadow-lg mt-5 mb-1" >
    <h2 style="font-size: 6em;" class="logo-font text-center mt-5">InstaClone</h2>
    <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

    <div class="form-group mx-auto w-75">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, class: 'form-control', placeholder: 'Enter your email' %>
    </div>

    <div class="form-group mx-auto w-75 my-5">
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
    </div>

    <div class="form-group mx-auto w-75 my-5">
      <br><%= f.submit "ログイン", class: 'btn btn-primary btn-block' %>
      <% end %><br>
    </div>

    <div class=" mx-auto w-75 mb-5">
      <p style="color:gray">アカウントをお持ちでないですか？<%= link_to '登録する', new_user_path %></p>
      <br>
    </div>
  </div>
</div>